#!/usr/bin/env bash
	find . \
			-type f \( \
			-name '*.ts' -o \
			-name '*.js' -o \
			-name '*.json' -o \
			-name '*.md' -o \
			-name '*.yml' \) | \
		grep -v node_modules | \
		grep -v '/dist/' | \
		grep -v '/docs/' | \
		grep -v 'website/website/' | \
		xargs $(dirname $0)/node_modules/.bin/prettier "$@"
